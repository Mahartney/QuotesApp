<h1>edit collection</h1>

<%= form_for :collection, url: collection_path(@collection), method: :patch do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_area :title %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', collection_path(@collection) %>

<%= link_to 'Delete!', collection_path(@collection), method: :delete, class: 'delete' %>
